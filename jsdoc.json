{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "source": {
    "include": ["lib", "plugin", "reporter", "config", "package.json", "readme.md"],
    "includePattern": "\\.js$",
    "excludePattern": "(node_modules/|docs/|.tmp/)"
  },
  "opts": {
    "encoding": "utf8",
    "destination": "./docs/",
    "private": true,
    "recurse": true,
    "template": "node_modules/hopsdoc"
  }
}
